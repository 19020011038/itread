<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_from_write_book_comments"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="发布书评"
            android:textColor="#000000"
            android:textSize="48px" />

        <Button
            android:id="@+id/write_book_comments_publish"
            android:layout_width="158px"
            android:layout_height="106px"
            android:layout_gravity="center"
            android:layout_marginRight="30px"
            android:background="@drawable/fabuduanping"
            android:text="发布"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/write_book_comments_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="46px"
                android:layout_marginRight="46px"
                android:hint="标题"
                android:maxLength="20"
                android:singleLine="true"
                android:textSize="60px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/write_book_comments_rating"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="46px"
                    android:gravity="center"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="3.5" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="46px"
                    android:gravity="center"
                    android:text="给这本书打个分吧"
                    android:textColor="#7f7f7f"
                    android:textSize="24px" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="30px"
                android:id="@+id/write_book_comments_image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/blue" />

            <TextView
                android:layout_marginTop="30px"
                android:id="@+id/write_book_comments_book_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="书名"
                android:textColor="#434343"
                android:textSize="36px" />


        </LinearLayout>

    </LinearLayout>


    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->
    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/write_book_comments_richeditor"
            android:layout_width="match_parent"
            android:layout_height="960px"
            android:layout_marginLeft="46px"
            android:layout_marginTop="60px"
            android:layout_marginRight="46px"
            android:layout_marginBottom="100px"
            android:gravity="center" />

        <ImageView
            android:id="@+id/write_book_comments_album"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="250px"
            android:src="@drawable/charu" />
    </RelativeLayout>


    <!--    </ScrollView>-->


</LinearLayout>