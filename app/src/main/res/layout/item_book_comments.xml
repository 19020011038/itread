<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_book_comments"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/book_comments_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/blue"
                app:civ_border_color="#a9a9a9"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/book_comments_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="用户名"
                android:textSize="38px" />

            <RatingBar
                android:id="@+id/book_comments_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5" />

            <TextView
                android:id="@+id/book_comments_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="已读"
                android:textSize="38px" />

            <TextView
                android:maxLength="10"
                android:id="@+id/book_comments_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2020-4-2"
                android:textSize="34px" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_comments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="评论标题"
            android:textColor="#000000"
            android:textSize="80px" />

        <TextView
            android:id="@+id/book_comments_word"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="啦啦啦啦啦啦啦啦啦啦"
            android:textColor="#e5e5e5"
            android:textSize="40px"
            android:maxLength="150"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f0f0f0" />

</LinearLayout>