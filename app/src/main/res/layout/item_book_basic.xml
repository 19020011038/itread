<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_dark2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#f0f0f0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="30px"
        android:layout_marginRight="48px"
        android:layout_marginBottom="30px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/book_image"
                android:layout_width="362px"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:src="@drawable/blue" />

            <TextView
                android:id="@+id/book_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:gravity="left|bottom"
                android:text="显示书籍信息"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="70px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/book_want"
                    android:layout_width="244px"
                    android:layout_height="80px"
                    android:layout_gravity="center|left"
                    android:src="@drawable/xiangdu"
                    android:text="想读" />

                <TextView
                    android:id="@+id/book_want_number"
                    android:layout_width="244px"
                    android:layout_height="40px"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="想读人数："
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/book_reading"
                    android:layout_width="244px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:src="@drawable/zaidu" />

                <TextView
                    android:id="@+id/book_reading_number"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="在读人数："
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/book_done"
                    android:layout_width="244px"
                    android:layout_height="80px"
                    android:layout_gravity="center|right"
                    android:src="@drawable/yidu" />

                <TextView
                    android:id="@+id/book_done_number"
                    android:layout_width="244px"
                    android:layout_height="40px"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    android:text="已读人数："
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="32px"
            android:orientation="horizontal">

            <TextView
                android:textColor="#434343"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="评分:"
                android:textSize="48px" />

            <RatingBar

                android:id="@+id/book_rating_1"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5" />

            <TextView
                android:layout_marginLeft="28px"
                android:id="@+id/book_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="8.0"
                android:textSize="48px" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_people"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="left"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="评分人数"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65px"
            android:layout_gravity="left"
            android:layout_marginTop="23px"
            android:textColor="#434343"
            android:gravity="center"
            android:text="简介:"
            android:textSize="48px" />

        <LinearLayout
            android:id="@+id/book_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginTop="10px"
            android:layout_marginRight="32px"
            android:layout_marginBottom="10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:text="简介"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_gravity="right|center"
                android:text="...展开全部"
                android:maxLength="150"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0" />
        <Button
            android:id="@+id/jump_book_book_comments"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:paddingBottom="10px"
            android:gravity="bottom|center"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:text="     全部书评   > "
            android:textColor="#bddc8d"
            android:textSize="48px" />
    </LinearLayout>
</LinearLayout>


