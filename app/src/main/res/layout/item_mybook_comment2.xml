<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f0f0f0">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:id="@+id/layout2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/layout1"
        android:background="#ffffff"
        app:cardCornerRadius="10px">

    <RelativeLayout
        android:id="@+id/mybook_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/mybook_comment_del"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:background="@drawable/tong1"
            android:layout_marginRight="30px"
            android:layout_marginTop="50px">
        </ImageButton>

        <ImageView
            android:id="@+id/mybook_comment_bookphoto"
            android:layout_width="100px"
            android:layout_height="130px"
            android:background="#c7c7c7"
            android:layout_marginTop="36px"
            android:layout_marginLeft="110px">
        </ImageView>

        <TextView
            android:id="@+id/mybook_comment_bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:layout_marginRight="70dip"
            android:layout_toRightOf="@+id/mybook_comment_bookphoto"
            android:layout_marginLeft="30px"
            android:text="书名书名书名"
            android:textSize="40px"
            android:textStyle="bold"
            android:textColor="#434343"
            android:maxLines="1"
            android:ellipsize="end">
        </TextView>

        <!--<ImageView
            android:id="@+id/myshort_2"
            android:layout_width="70px"
            android:layout_height="50px"
            android:background="@drawable/myshort2"
            android:layout_below="@+id/myshort_comment_bookphoto"
            android:layout_marginTop="28dip"
            android:layout_marginLeft="22dip">
        </ImageView>

-->
        <TextView
            android:id="@+id/mybook_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mybook_comment_bookphoto"
            android:layout_marginLeft="110px"
            android:layout_marginRight="110px"
            android:layout_marginTop="50px"
            android:text="书评名字名字名字"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#434343"
            android:textSize="58px"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/mybook_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mybook_comment_name"
            android:layout_marginLeft="110px"
            android:layout_marginTop="7dp"
            android:layout_marginRight="86px"
            android:lineSpacingExtra="6dip"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textColor="#434343"
            android:textSize="44px">

        </TextView>

        <TextView
            android:id="@+id/mybook_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mybook_comment_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="86px"
            android:layout_marginTop="70px"
            android:text="2020.3.8"
            android:textSize="38px"
            android:textColor="#7f7f7f">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_below="@+id/mybook_comment_time">
        </TextView>

        <RatingBar
            android:id="@+id/mybook_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="4.6"
            android:stepSize="0.1"
            android:layout_below="@id/mybook_comment_content"
            android:layout_marginLeft="110px"
            android:layout_marginTop="75px"
            />
    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
