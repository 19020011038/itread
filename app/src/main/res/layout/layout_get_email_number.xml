<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetEmailNumberActivity"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/email_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="14dp"
            android:text="验证邮箱"
            android:textSize="20sp"
            android:textColor="#0f0000">
        </TextView>

        <RelativeLayout
            android:id="@+id/email_back"
            android:layout_width="54dp"
            android:layout_height="57dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back2"
                android:layout_centerInParent="true">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_saw_1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_get_email"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="140dp"
            android:hint=" 请输入验证码"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_shape">
        </EditText>

        <Button
            android:id="@+id/email_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_get_email"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:background="#bddc8d"
            android:text="确定"
            android:textSize="19sp"
            android:textColor="#ffffff">
        </Button>

    </RelativeLayout>

</LinearLayout>